pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo '1. Obtendo o código-fonte do GitHub...'
            }
        }
        stage('Build') {
            steps {
                echo '2. Construindo a aplicação (aqui virá o comando de build)...'
            }
        }
        stage('Test') {
            steps {
                echo '3. Executando os testes (aqui virá o comando de teste)...'
            }
        }
    }
}
